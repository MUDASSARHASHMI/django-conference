<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="/media/packet_labels.xsl"?>
<registrations>
    {% for registration in registrations %}
    <registration name="{{registration.registrant.get_name}}"
        institution="{{registration.registrant.institution}}"
        type="{{registration.type}}">
        {% for extra in registration.regextras.all %}
        <extra name="{{extra}}" quantity="{{extra.quantity}}"/>
        {% endfor %}
    </registration>
    {% endfor %}
</registrations>
